<!DOCTYPE html>
<html lang="en">

<head>
    <%- include partials/head %>
    <link rel="stylesheet" href="/css/account.css">
    <title>Agregar Plato</title>
</head>

<body>
    <script src="/js/validator/createProduct.js"></script>
    <%- include partials/header %> 
    <main>
        <section class="box-space">

            <div class="errores">
                <ul>
                    
                </ul>
            </div>
            <form action="/buisness/account/new-product" method="POST" enctype="multipart/form-data" id="add-operations-form">
                <div class="hide-edit">
                    <label for="img-product">Agregar</label>
                    <input type="file" name="img-product" id="img-product">
                </div>
                <div>
                    <label for="plato">Nombre del Plato</label>
                    <input type="text" name="plato" id="plato" value="">
                </div>
                <div>
                    <label for="descripcion">Descripcion</label>
                    <textarea name="descripcion" id="descripcion" cols="30" rows="10"></textarea>
                </div>
                <div>
                    <label for="categoria">Categoria</label>
                    <input type="text" name="categoria" id="categoria" value="">
                </div>
                <div>
                    <label for="precio">Precio</label>
                    <input type="number" name="precio" id="precio" value="">
                </div>
                <fieldset class="logout-button">
                    <button type="submit" class="none-decoration btn-check">Confirmar</button>
                </fieldset>
            </form>
            <form action="/buisness/account/products">
                <fieldset class="logout-button">
                        <button type="menu" class="none-decoration">Volver</button>
                </fieldset>    
            </form>
        </section>
    </main>
    <%- include partials/footer %>
    <script src="/js/loader.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/sweetAlertConfirm.js"></script>
</body>

</html>