<!DOCTYPE html>
<html lang="en">
<head>
    <%- include partials/head %>
    <link rel="stylesheet" href="/css/style-login.css">
    <title>Comamos</title>
</head>

  <body>
    
    <%- include partials/header %> 

  
      <main class="centro">
   
       

        <form action="/buisness/login" method="POST" class="format-form">
          
          <div class="exit">
            <a href="/" class="exit-button"><i class="fas fa-times"></i></a>
          </div>
      
          
          <h2 class="close" id="padding">Login Negocio</h2> <div></div>
          <div>
          <!-- <label class="alejar">Email</label><div></div> -->
          <input type= "email" name= "email" id= "email" placeholder="Email"
            class="<%= locals.errors && errors.email? 'is-invalid' : null %>"
            value="<%= locals.oldData ? oldData.email : null %>">
          </input>
          <% if (locals.errors && errors.email) { %>
            <div class="text-danger">
              <%= errors.email.msg %>
            </div>
            <% } %>
        </div>
        
        <div>
          <!-- <label>Contrase単a</label><div></div> -->
          <input type= "password" name= "password" id= "contrase単a" placeholder="Contrase単a"
            class="<%= locals.errors && errors.password? 'is-invalid' : null %>"
            value="<%= locals.oldData ? oldData.password : null %>">
          </input>
          <% if (locals.errors && errors.password) { %>
                  <div class="text-danger">
                    <%= errors.password.msg %>
                  </div>
                <% } %>
        </div>

        <div class="alejar">
          <button class="center logout-button" type="submit">Login</button>
          <div class="rebember">
            <label for="recordarme" class="width48">Recordar usuario </label>
            <input type="checkbox" value="Recordarme" name= "recordarme" id="recordarme"></input>
          </div>
        </div>

            <p class="subrayado">Restablecer contrase単a</p>
            <div></div>
        </form>
      </main>
      
    <%- include partials/footer %>     
          
  </body>
</html>
    
                
    
    
        
   
