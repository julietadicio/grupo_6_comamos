<!DOCTYPE html>
<html lang="en">
<head>
    <%- include partials/head %>
    <link rel="stylesheet" href="/css/style-login.css">
    <title>Comamos</title>
</head>

  <body>
    
    <%- include partials/header %> 

  
      <main class="centro">
   
       

        <form action="/user/login-buisness">
          
          <div class="exit">
            <a href="/" class="exit-button"><i class="fas fa-times"></i></a>
          </div>
      
          
          <h2 class="close" id="padding">Login</h2> <div></div>
          <p>
            <label class="alejar">Usuario del negocio</label><div></div>
            <input type= "text" name= "email" id= "email">
          </p>
          <% if (locals.errors && errors.email) { %>
            <div>
              <%= errors.email.msj %>
            </div>
            <% } %>
            <p>
              <label>Contraseña</label><div></div>
              <input type="password" name="password" id="contraseña">
            </p>
            <button type="submit">Login</button>
            <p class="alejar">
              <div></div>
              <input type="checkbox" value="recordarme" name= "recordarme" checked> 
              <label>Recordar usuario </label>
          </p>
          <p class="subrayado">Restablecer contraseña</p>
          <div></div>
        </form>
      </main>
      
    <%- include partials/footer %>     
          
  </body>
</html>
    
                
    
    
        
   
